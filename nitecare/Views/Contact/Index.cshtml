@model nitecare.Model.Contact;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="banner-lg block-bg" style="background-image: url('css/skin/slider/banner-cart.png')">
    <div class="container d-flex align-items-center h-100">
        <div class="text-banner">
            <h1 class="tt-md text-uppercase">Liên Hệ</h1>
            <nav arial-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" title="" alt="" target="_self">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item active"><a asp-controller="Contact" asp-action="Index" title="" alt="" target="_self">Liên hệ</a></li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<main class="mainer">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-6 col-xl-5 mb-4 order-md-2 pl-xl-5">
                <div class="thumb-res wide">
                    <img src="~/css/skin/contact.png">
                </div>
            </div>
            <div class="col-md-6 col-xl-7 mb-4 order-md-1">
                <form class="form-validate material-form" method="post">
                    <div class="row gx-2">
                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <input asp-for="Name" class="form-control" type="text" required>
                                <label class="label-text">Họ tên</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <input asp-for="Email" class="form-control" type="email" required>
                                <label class="label-text">Email</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <input asp-for="Phone" class="form-control" type="tel">
                                <label class="label-text">Số điện thoại</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <input asp-for="Title" class="form-control" type="text" required>
                                <label class="label-text">Tiêu đề</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group mb-3">
                                <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
                                <label class="label-text">Nội dung</label>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <div class="d-flex flex-wrap align-items-center justify-content-end">
                                <div class="g-recaptcha my-2 mr-3" data-sitekey="6LcbK98UAAAAALQI9rCCE3Vlm5LZtCt_Fdo7V4Wc"></div>
                                <button class="btn btn-secondary px-4" type="submit">Gửi liên hệ</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12 col-lg-5 wow fadeIn">
                <div class="d-flex align-items-center h-100">
                    <div class="block-contact h-100">
                        <h2 class="tt-lg tt-icon text-primary">Liên Hệ</h2>
                        <div class="mb-3">
                            <div class="flex-icon"><span class="far fa-map-marker-alt icon"></span>Tầng 2, Toà nhà Vietcomreal Building, Số 68 Nguyễn Huệ, Phường Bến Nghé, Quận 1, Tp HCM, Việt nam</div>
                            <a class="flex-icon" href="tel:0855 262 361" alt="" title=""><span class="far fa-phone fa-flip-horizontal icon"></span>0855 262 361</a>
                            <a class="flex-icon" href="/" alt="" title=""><span class="far fa-globe icon"></span>www.nitecare.vn</a>
                            <a class="flex-icon" href="mailto:info@vigorphar.com" alt="" title=""><span class="far fa-envelope icon"></span>info@vigorphar.com</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-7 wow fadeIn">
                <div class="map thumb-res wide-sm rounded-3 mb-0" id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d7450.352746287509!2d105.802275!3d20.985566!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xcc75010473226bcd!2sFun%20Face!5e0!3m2!1sen!2sus!4v1639574940396!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div><div class="block-bg block-customer py-3">
        <div class="container">
            <div class="carousel-logo-o">
                <div class="carousel-logo">
                    <div class="carousel-cell">
                        <a class="thumb-res wide-sm" alt="" title="" href="#">
                            <img src="~/css/skin/Company logo/Company logo.png">
                        </a>
                    </div>
                    <div class="carousel-cell">
                        <a class="thumb-res wide-sm" alt="" title="" href="#">
                            <img src="~/css/skin/Company logo/Company logo-2.png">
                        </a>
                    </div>
                    <div class="carousel-cell">
                        <a class="thumb-res wide-sm" alt="" title="" href="#">
                            <img src="~/css/skin/Company logo/Company logo-3.png">
                        </a>
                    </div>
                    <div class="carousel-cell">
                        <a class="thumb-res wide-sm" alt="" title="" href="#">
                            <img src="~/css/skin/Company logo/Company logo-4.png">
                        </a>
                    </div>
                    <div class="carousel-cell">
                        <a class="thumb-res wide-sm" alt="" title="" href="#">
                            <img src="~/css/skin/Company logo/Company logo-5.png">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
