@using nitecare.Model;
@using nitecare.ViewModels;
@{
    ViewData["Title"] = "Trang chủ";
    List<Page> pageList = ViewBag.PageList;
    List<FeedbackDto> feedbackList = ViewBag.FeedBackList;
    List<ProductDto> productList = ViewBag.ProductList;
}

