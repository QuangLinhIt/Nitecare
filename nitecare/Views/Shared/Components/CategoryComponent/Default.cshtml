@model IEnumerable<nitecare.Model.Category>


    <ul class="menu-slide-sub">
        @foreach (var item in Model)
        {
            if (item.ParentId == null)
            {
                <li>
                    <a asp-controller="Product" asp-action="GetProductByCategory" asp-route-categoryId="@item.CategoryId" title="" alt="" target="_self">@item.CategoryName</a>
                    <ul>
                        @foreach (var child in Model)
                        {
                            if (child.ParentId == item.CategoryId)
                            {
                                <li>
                                    <a asp-controller="Product" asp-action="GetProductByCategory" asp-route-categoryId="@child.CategoryId" title="" alt="" target="_self">@child.CategoryName</a>
                                </li>
                            }
                        }

                    </ul>
                </li>
            }
        }
    </ul>
