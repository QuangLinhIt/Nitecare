@model nitecare.Model.ProductDetail

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mx-20">Thông tin chi tiết sản phẩm</h3>
<hr />
<form asp-action="Create">
    <div class="row mx-10">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-6">
            <label asp-for="ProductId" class="control-label"></label>
            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
        </div>
      
        <div class="form-group col-md-12">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-12 my-15">
            <p>Mô tả</p>
            <div class="tinymce-wrap">
                <textarea class="description" asp-for="Description"></textarea>
            </div>
        </div>
        <div class="col-md-12 my-15">
            <p>Thông tin chi tiết</p>
            <div class="tinymce-wrap">
                <textarea class="description" asp-for="ProductContent"></textarea>
            </div>
        </div>

        <div class="form-group mx-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div class="form-group mx-10">
            <a class="btn btn-dark" asp-action="Index">Back</a>
        </div>
    </div>
</form>


