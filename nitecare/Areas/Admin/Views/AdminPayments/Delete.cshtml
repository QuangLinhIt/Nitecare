@model nitecare.Model.Payment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mx-4">
    <div>
        <h3>Xóa phương thức thanh toán</h3>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentContent)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PaymentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Index">Back</a>
    </form>
</div>
