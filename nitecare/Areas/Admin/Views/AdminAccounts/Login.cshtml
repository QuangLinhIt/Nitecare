@model nitecare.BaseModel.LoginVm 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid d-flex justify-content-center">
    <div class="col-lg-12 pa-0">
        <div class="py-50 d-lg-none"></div>
        <div class="auth-form-wrap py-50">
            <div class="auth-form w-xxl-40 w-sm-50 w-xs-100">
                <form method="post">
                    <h1 class="display-5 font-weight-bold mb-10">Dashboard CMS</h1>
                    <p class="mb-30">Chào mừng đến với hệ thống quản trị. Vui lòng điền vào thông tin của bạn để truy cập Dashboard.</p>
                    <div class="form-group">
                        <input class="form-control" placeholder="Email" type="email" required asp-for="Email">
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input class="form-control" placeholder="Password" type="password" required asp-for="Password" id="passwordHtml">
                            <div class="input-group-append">
                                <span class="input-group-text"><span class="feather-icon"><i data-feather="eye-off" id="iconEyeHtml" onclick="ShowHidePassword()"></i></span></span>
                            </div>
                        </div>
                    </div>
                    <div class="custom-control custom-checkbox mb-25">
                        <input class="custom-control-input" id="same-address" type="checkbox" checked>
                        <label class="custom-control-label font-14" for="same-address">Keep me logged in</label>
                    </div>
                    <button class="btn btn-primary px-4 mr-2" type="submit">Login</button>
                    <a href="forgot-password.html">Quên mật khẩu?</a>
                </form>
                <div class="mt-50 font-13"><span>Powered by <a target="_blank" rel="noopener noreferrer" href="//bizmac.com.vn">BizMaC</a></span></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
<script>
    function ShowHidePassword() {
        var password = document.getElementById("passwordHtml");
        var iconEye = document.getElementById("iconEyeHtml");
        if (password.type === "password") {
            password.type = "text";
            iconEye.setAttribute("data-feather", "eye");
        }
        else {
            password.type = "password";
            iconEye.setAttribute("data-feather", "eye-off");
        }
    }
</script>
}
