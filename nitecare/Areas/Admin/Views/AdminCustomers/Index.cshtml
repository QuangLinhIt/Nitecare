@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<nitecare.Model.Customer>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Container -->
<div class="container-fluid px-lg-4">

    <div class="row">
        <div class="col-xl-12">
            <p>
                <a class="btn btn-info my-4" asp-action="Create">Add new customer</a>
            </p>
            <section class="hk-sec-wrapper">
                <h5 class="hk-sec-title">Danh sách khách hàng: page @CurrentPage</h5>
                <div class="row">
                    <div class="col-sm">
                        <div class="table-wrap">
                            <table class="table tablesaw table-bordered table-hover  mb-0" data-tablesaw-mode="swipe" data-tablesaw-sortable data-tablesaw-sortable-switch data-tablesaw-minimap data-tablesaw-mode-switch>
                                <thead>
                                    <tr>
                                        <th scope="col" data-tablesaw-sortable-col>CustomerId</th>
                                        <th scope="col" data-tablesaw-sortable-col>Email</th>
                                        <th scope="col" data-tablesaw-sortable-col>Phone</th>
                                        <th scope="col" data-tablesaw-sortable-col>City</th>
                                        <th scope="col" data-tablesaw-sortable-col>District</th>
                                        <th scope="col" data-tablesaw-sortable-col>Ward</th>
                                        <th scope="col" data-tablesaw-sortable-col>Road</th>
                                        <th scope="col" data-tablesaw-sortable-col>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>@item.CustomerId</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.City</td>
                                        <td>@item.District</td>
                                        <td>@item.Ward</td>
                                        <td>@item.Road</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.CustomerId">
                                                <span class="feather-icon" style="color:black"><i data-feather="edit"></i></span>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.CustomerId">
                                                <span class="feather-icon" style="color:red"><i data-feather="trash-2"></i></span>
                                            </a>
                                        </td>
                                    </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index"/>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- /Container -->
<!-- Footer -->
<div class="hk-footer-wrap container-fluid px-lg-4">
    <footer class="footer">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <p> © 2019. Powerd by<a href="//bizmac.com.vn" class="text-dark" target="_blank">BizMaC</a></p>
            </div>
        </div>
    </footer>
</div>
<!-- /Footer -->
