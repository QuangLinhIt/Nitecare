@model nitecare.Model.Feedback

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="mx-10">
    <div>
        <h3>Xóa phản hồi</h3>
    </div>
    <hr />
    <div class="row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-12">
            <p>Avatar</p>
            <img decoding="async" src="~/feedback/avatar/@Model.FeedbackAvatar" asp-append-version="true" width="150px" height="150px" class="circle" />
        </div>
        <div class="form-group col-md-10">
            <label asp-for="FeedbackContent" class="control-label"></label>
            <input asp-for="FeedbackContent" class="form-control" />
            <span asp-validation-for="FeedbackContent" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <p>Hình ảnh</p>
            <img decoding="async" src="~/feedback/image/@Model.FeedbackImage" asp-append-version="true" width="300px" height="300px" />
        </div>

    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FeedbackId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Index">Back</a>
    </form>
</div>
