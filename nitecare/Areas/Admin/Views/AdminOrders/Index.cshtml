@model IEnumerable<nitecare.Model.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-lg-4">

    <div class="row">
        <div class="col-xl-12">

            <section class="hk-sec-wrapper">
                <h5 class="hk-sec-title">Danh sách đơn hàng</h5>
                <div class="row">
                    <div class="col-sm">
                        <div class="table-wrap">
                            <table class="table tablesaw table-bordered table-hover  mb-0" data-tablesaw-mode="swipe" data-tablesaw-sortable data-tablesaw-sortable-switch data-tablesaw-minimap data-tablesaw-mode-switch>
                                <thead>
                                    <tr>
                                        <th scope="col" data-tablesaw-sortable-col>Mã</th>
                                        <th scope="col" data-tablesaw-sortable-col>Email</th>
                                        <th scope="col" data-tablesaw-sortable-col>Sản phẩm đã chọn</th>
                                        <th scope="col" data-tablesaw-sortable-col>Tổng tiền</th>
                                        <th scope="col" data-tablesaw-sortable-col>Ngày đặt</th>
                                        <th scope="col" data-tablesaw-sortable-col>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.OrderId</td>
                                                <td>@item.Customer.Email</td>
                                                <td>
                                                    @foreach (var child in item.OrderDetails.ToList())
                                                    {
                                                        <div>@child.Quantity<span> x </span>@child.Product.ProductName</div>
                                                    }
                                                </td>
                                                <td>@item.Total</td>
                                                <td>@item.ShipDate</td>
                                                <td>
                                                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.OrderId">Edit</a>
                                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
